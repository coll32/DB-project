                <TableView fx:id="checkedOutView" onMouseClicked="#showRowData" prefHeight="340.0" prefWidth="741.0" />
                
                            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <children>
                    <TextField fx:id="memberNumber" prefWidth="175.0" promptText="Library Number" stylesheets="@styles.css" />
                  <TextField fx:id="memberNumber1" prefWidth="175.0" promptText="Book ID" stylesheets="@styles.css" />
