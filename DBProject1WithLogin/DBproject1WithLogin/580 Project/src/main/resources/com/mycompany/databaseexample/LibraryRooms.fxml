<BorderPane prefHeight="770.0" prefWidth="941.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.databaseexample.DatabaseSQLiteController">
    <top>
        <BorderPane styleClass="header-section" stylesheets="@demo.css">
            <left>
                <Label id="header-text" text="Database Application Using Java FXML" />
            </left>
            <right>
                <Button id="account" text="Account">
                    <graphic>
                        <ImageView fitHeight="24" fitWidth="24" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@javafx_account_example.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </right>
        </BorderPane>
    </top>
    <left>
        <VBox prefHeight="600.0" prefWidth="122.0" styleClass="sidebar-section">
         <children>
            <Button mnemonicParsing="false" onAction="#libraryRooms" prefHeight="34.0" prefWidth="120.0" styleClass="btn-danger" stylesheets="@styles.css" text="Update View" />
         </children>
        </VBox>
    </left>
    <center>
        <VBox fx:id="vBox" minHeight="600.0" prefHeight="500.0" styleClass="content-section">
            <children>
                <Label id="content-header" stylesheets="@demo.css" text="Library Room Reservations" textFill="#11c3c6" />
            
                <!-- container using pref size as max size to not grow larger than the image -->
                <VBox maxHeight="-Infinity" maxWidth="-Infinity" styleClass="my-rect" stylesheets="@demo.css" />  
            
            
                <Label id="content" styleClass="content-section" stylesheets="@demo.css" />
                <TableView fx:id="roomView" onMouseClicked="#showRowData" prefHeight="366.0" prefWidth="819.0" />
                
                            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                <children>
                    <TextField fx:id="memberNumber" prefWidth="175.0" promptText="Library Number" stylesheets="@styles.css" />
                  <TextField fx:id="dateToReserve" prefWidth="175.0" promptText="Date to Reserve" stylesheets="@styles.css" />
                </children>
            </HBox>
            <HBox prefHeight="168.0" prefWidth="741.0" spacing="10.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#handleReserveRoom" prefHeight="34.0" prefWidth="120.0" styleClass="btn-danger" stylesheets="@styles.css" text="Reserve" />
                  <Button mnemonicParsing="false" onAction="#handleRemoveReservation" prefHeight="34.0" prefWidth="206.0" styleClass="btn-danger" stylesheets="@styles.css" text="Remove Reservation" />
                    
                      </children>
            </HBox>
                
            </children>
            </VBox>

               
        

    </center>
    <bottom>
        <HBox id="footer-section" alignment="CENTER" minHeight="100.0" prefHeight="100.0" prefWidth="853.0" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="footerLabel" alignment="CENTER" prefHeight="31.0" prefWidth="313.0" styleClass="footer" stylesheets="@demo.css">
                    <font>
                        <Font name="Arial" size="12.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </bottom>
   <right>
      <VBox prefHeight="600.0" prefWidth="68.0" BorderPane.alignment="CENTER" />
   </right>
    
    
</BorderPane>
